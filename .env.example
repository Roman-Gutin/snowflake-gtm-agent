# ============================================================================
# GTME - Snowflake Cortex AI Agent Environment Variables
# ============================================================================
# Copy this file to .env and fill in your actual credentials
# This file is safe to commit to version control
# ============================================================================

# ----------------------------------------------------------------------------
# SNOWFLAKE ACCOUNTS - Configure multiple accounts
# ----------------------------------------------------------------------------
# Set ACTIVE_SNOWFLAKE_ACCOUNT to choose which account to use
# Options: "PROD", "DEMO", or add your own

ACTIVE_SNOWFLAKE_ACCOUNT=DEMO

# Production Account (your original account)
SNOWFLAKE_ACCOUNT_PROD=YOUR_PROD_ACCOUNT_ID
SNOWFLAKE_USER_PROD=AGENT_SERVICE_USER
SNOWFLAKE_WAREHOUSE_PROD=AGENTS_DEMO_WH
SNOWFLAKE_DATABASE_PROD=AGENTS_DEMO
SNOWFLAKE_SCHEMA_PROD=PUBLIC
SNOWFLAKE_ROLE_PROD=AGENTS_SERVICE_ROLE
SNOWFLAKE_PAT_PROD=YOUR_PROD_PAT


# Legacy variables (for backward compatibility - will use ACTIVE_SNOWFLAKE_ACCOUNT)
SNOWFLAKE_ACCOUNT=${SNOWFLAKE_ACCOUNT_DEMO}
SNOWFLAKE_USER=${SNOWFLAKE_USER_DEMO}
SNOWFLAKE_WAREHOUSE=${SNOWFLAKE_WAREHOUSE_DEMO}
SNOWFLAKE_DATABASE=${SNOWFLAKE_DATABASE_DEMO}
SNOWFLAKE_SCHEMA=${SNOWFLAKE_SCHEMA_DEMO}
SNOWFLAKE_ROLE=${SNOWFLAKE_ROLE_DEMO}
SNOWFLAKE_PAT=${SNOWFLAKE_PAT_DEMO}

# ----------------------------------------------------------------------------
# DEPLOYMENT OPTIONS - Choose which integrations to deploy
# ----------------------------------------------------------------------------
# Set to "true" to deploy, "false" to skip
DEPLOY_GOOGLE_WORKSPACE=true
DEPLOY_SALESFORCE=true
DEPLOY_WEB_SEARCH=true

# ----------------------------------------------------------------------------
# GOOGLE WORKSPACE - OAuth2 Credentials (Required if DEPLOY_GOOGLE_WORKSPACE=true)
# ----------------------------------------------------------------------------
# Get these from: https://console.cloud.google.com/apis/credentials
# 1. Create OAuth 2.0 Client ID (Application type: Desktop app)
# 2. Enable APIs: Google Docs, Google Sheets, Google Drive
GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-client-secret
GOOGLE_REDIRECT_URI=http://localhost:8080

# ----------------------------------------------------------------------------
# SALESFORCE - Credentials (Required if DEPLOY_SALESFORCE=true)
# ----------------------------------------------------------------------------
# Get security token: Setup → My Personal Information → Reset Security Token
SALESFORCE_USERNAME=your-username@salesforce.com
SALESFORCE_PASSWORD=your-password
SALESFORCE_SECURITY_TOKEN=your-security-token

# ----------------------------------------------------------------------------
# WEB SEARCH - API Keys (Required if DEPLOY_WEB_SEARCH=true)
# ----------------------------------------------------------------------------
# Perplexity API: https://www.perplexity.ai/settings/api
PERPLEXITY_API_KEY=pplx-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Parallel Web Systems Task API
PARALLEL_WEB_SYSTEMS_API_KEY=your-findall-api-key

# ----------------------------------------------------------------------------
# AGENT CONFIGURATION - Optional (defaults provided)
# ----------------------------------------------------------------------------
AGENT_NAME=GTM_ENGINEER_AGENT
AGENT_DATABASE=snowflake_intelligence
AGENT_SCHEMA=agents
AGENT_MODEL=claude-4-sonnet

